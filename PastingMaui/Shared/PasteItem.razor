<h6>Paste Item</h6>

@if (paste.IsComplete())
{
    <p>@paste.StringData</p>
}
else
{
    <p>Loading</p>
}

@code {

    [Parameter]
    public Paste paste { get; set; }

    protected override void OnInitialized()
    {
        base.OnInitialized();
        paste.OnComplete += async (sender, args) => { await InvokeAsync(() => StateHasChanged()); };
    }

}
